# ===== 环境配置 =====
NODE_ENV=development

# ===== 数据库配置 =====
MONGODB_URI=mongodb://localhost:27017/video-maker

# ===== 服务器配置 =====
SERVER_PORT=3000
WS_PORT=3001

# ===== 第三方 API 密钥 =====
# 视频生成服务 - 阿里云通义千问 (DashScope)
# 获取地址: https://bailian.console.aliyun.com/
DASHSCOPE_API_KEY=

# LLM 服务 - Google Gemini
# 获取地址: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# ===== 服务商选择 =====
VIDEO_PROVIDER=qwen        # 视频生成提供商: qwen
LLM_PROVIDER=gemini        # LLM 提供商: gemini 或 qwen

# ===== 上传配置 =====
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# ===== 日志配置 =====
LOG_LEVEL=info
LOG_DIR=./logs

# ===== 视频生成配置 =====
VIDEO_POLL_INTERVAL=5000
VIDEO_TIMEOUT=600000

# ===== WebSocket 配置 =====
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=60000

# ===== Qwen 配置 =====
# 视频生成模型
QWEN_VIDEO_MODEL=wan2.6-i2v
# LLM 模型 (可选: qwen-plus, qwen-turbo, qwen-max)
QWEN_LLM_MODEL=qwen-plus
QWEN_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# ===== Gemini LLM 配置 =====
GEMINI_MODEL=gemini-pro

# ============================================================
# v2.0 Prompt Optimization Configuration (Optional)
# ============================================================

# Optimization timeout (milliseconds) - Max time for complete optimization flow
OPTIMIZATION_TIMEOUT=300000

# Human-in-the-loop confirmation timeout (milliseconds) - Wait time for user to confirm intent
HUMAN_CONFIRMATION_TIMEOUT=300000

# Maximum concurrent optimization tasks
MAX_CONCURRENT_OPTIMIZATIONS=3
